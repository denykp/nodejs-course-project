<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <h1>My Orders</h1>
    <% if(orders.length) { %>
    <% for (const order of orders) { %>
    <div style="gap: 30px;">
      <h3 style="margin-top:30px;margin-bottom: 10px;">Order Id: <%= order.id %></h3>
      <% for (const product of order.products) { %>
      <div class="product-list-card">
        <img src="https://img.freepik.com/free-photo/book-library-with-open-textbook_1150-5921.jpg" alt="book-image" width="100px">
        <div style="width: 100%;">
          <div style="margin-top: 0; font-size: 16px"><%= product.title %></div>
          <div class="price" style="font-weight: bold;"><%= product.price %></div>
        </div>
        <div style="width: 150px;">Qty: <%= product.orderItem.qty %></div>
      </div>
      <% } %>
    </div>
    <% } %>
    <% } else { %>
    <span>Currently there is no order to display</span>
    <% } %>
    <!-- <div style="margin-top: 50px;">
      <button id="button-count" type="button">
        Counter <span id="display-count">0</span>
      </button>
    </div> -->
  </main>
</body>

</html>